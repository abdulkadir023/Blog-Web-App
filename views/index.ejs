<%- include('partials/header') %>
<main>

  <div class="container bootStrap">
    <div class="px-4 py-5 my-5 text-center">
      <img class="d-block mx-auto mb-4 mt-6" src="/pic.jpg" alt="" width="100%" height="500">
      <h1 class="display-5 fw-bold text-body-emphasis">Your Story, Your Platform</h1>
      <div class="col-lg-12 mx-auto">
        <p class="lead mb-4 sub-heading">Feeling like Expressing your ideas or thoughts. Create engaging blog posts and let your ideas flow.Your stories matter. Start your blogging journey today.</p>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
          <button type="button" class="btn create-blog btn-primary btn-lg px-4 gap-3"><a href="/create">Create a Blog</a></button>
          <button type="button" class="btn btn-outline-secondary btn-lg px-4">Explore Blogs</button>
        </div>
      </div>
  </div>
 </div>

 <hr style="width: 75%;">
  
 <div class="blog-posts " style="text-align: center;"> 
  <h1>Blog Posts</h1>
 </div>


 <div class="container blog"> 
  <% if (posts.length > 0) { %>
    <% posts.forEach(post => { %>
      <div class="post"> 
        <article>
          <h2><a href="/posts/<%= post.id %>"><%= post.title %></a></h2>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
              <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z"/>
            </svg> <em><%= post.author %></em> -
  
            <svg xmlns="http://www.w3.org/2000/svg" width="13" height="13" fill="currentColor" class="bi bi-clock" viewBox="0 0 16 16">
              <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71z"/>
              <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16m7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0"/>
            </svg> <span><%= post.date %></span>
            <p><%= post.content.slice(0, 100) %>...</p>
            <button type = "button" class="btn btn-primary edit"> <a href="/posts/<%= post.id %>/edit">Edit</a> </button>
            <form action="/posts/<%= post.id %>/delete" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-outline-secondary px-4">Delete</button>
            
            </form>
        </article> 
      </div>

    <% }); %>
  <% } else { %>
    <p>No posts yet!</p>
  <% } %>
 </div>
</main>

<%- include('partials/footer') %>